// tap: backspace | shift + tap: delete
ZMK_MOD_MORPH(bspc_del,
    bindings = <&kp BSPC>, <&kp DEL>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)

// tap: to dke | shift + tap: exclm
ZMK_MOD_MORPH(to_dke_exclm,
    bindings = <&to DKE>, <&kp EXCLM>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)

